    <div>
        <p>Create a team member</p>
        <form id="add-team-member" class="" data-parsley-validate="">
            <label for="fullname">Full Name * :</label>
            <input type="text" id= 'add-name' class="form-control" name="fullname" required="">

            <label for="email">Email * :</label>
            <input type="email" id = 'add-email' class="form-control" name="email" data-parsley-trigger="change" required="">
        
            <label for="role">Role * :</label>
            <input type="text"  id = 'add-role' class="form-control" name="role" data-parsley-trigger="change" required="">

            <br>
            <input type="submit" id= 'add-btn' class="btn btn-default" value="Add">
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
